<h1>Jonotus</h1>

<span style="float:left;">
<%= form_tag queuings_path, :method => 'get' do %>
    <%= hidden_field_tag :search, "laituripaikka" %>
    <%= button_tag(type: "submit", class: "btn") do %>
        <i class="icon-ok"></i> Laituripaikka
    <% end %>
<% end %>
</span>
<span style="float:left;">
<%= form_tag queuings_path, :method => 'get' do %>
    <%= hidden_field_tag :search, "telakkapaikka" %>
    <%= button_tag(type: "submit", class: "btn") do %>
        <i class="icon-warning-sign"></i> Telakkapaikka
    <% end %>
<% end %>
</span>

<span style="float:left;">
<%= form_tag queuings_path, :method => 'get' do %>
    <%= hidden_field_tag :search, "varastokoppi" %>
    <%= button_tag(type: "submit", class: "btn") do %>
        <i class="icon-warning-sign"></i> Varastokoppi
    <% end %>
<% end %>
</span>
<div style="clear: both;"></div>
<table>
  <tr>
    <th>Tyyppi</th>
    <th>Jäsennumero</th>
    <th>Päiväys</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @queuings.each do |queuing| %>
  <tr>
    <td><%= queuing.tyyppi %></td>
    <td><%= queuing.jno %></td>
    <td><%= queuing.pvm %></td>
    <td><%= link_to 'Muokkaa', edit_queuing_path(queuing) %></td>
    <td><%= link_to 'Poista', queuing, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Uusi Jonotus', new_queuing_path %>