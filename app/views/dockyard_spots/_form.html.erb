    <%= f.text_field :width %><br />
    <%= f.label :Pituus %>
    <%= f.text_field :length %><br />
    <%= f.label :Vene %>
    <% if !@dockyard_spot.boat.nil? %>
    	<%= f.text_field :boat_id, :value => @dockyard_spot.boat.RekNro %>
    <% else %>
    	<%= f.text_field :boat_id%>
    <% end %>
    <%= f.label :Traileri %>
    <%= f.check_box :trailer %><br />
    <%= f.label :Nosto %>
    <%= f.check_box :lift %><br />
  </div>
  <div class="actions">
    <%= f.submit @teksti, :id => 'lisaa_telakkapaikka'%>
  </div>
<% end %>
