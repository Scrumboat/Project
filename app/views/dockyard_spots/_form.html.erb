
<%= simple_form_for([@dockyard, @dockyard_spot], :html => {:multipart => true}) do |f| %>
  <% if @dockyard_spot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dockyard_spot.errors.count, "error") %> prohibited this spot from being saved:</h2>

      <ul>
      <% @dockyard_spots.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">    
    <%= f.label :Numero %>
    <%= f.text_field :number %><br />
