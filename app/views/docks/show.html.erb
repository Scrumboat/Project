<h1>Laituri <%= @dock.name %></h1>
<p id="notice"><%= notice %></p>

<p>
  <b>Laiturin pituus:</b>
  <%= @dock.length.to_s + ' m' %>
</p>

<h2>Laituripaikat</h2>

<h3>Vasen puoli </h3>
<table>
  <tr>
    <th>Numero</th>
    <th>Pituus</th>
    <th>Leveys</th>
    <th>Syvyys</th>
    <th>Reknro</th>
    <th>Jäsennumero</th>
    <th>Vartiovuoro</th>
    <th>Hinta</th>
    <th>On olemassa</th>
    <th></th>
    <th></th>
  </tr>

  <% @berths.each do |berth| %>
      <% if berth.number % 2 != 0 %>
          <tr>
            <td><%= berth.number.to_s %></td>
            <td><%= berth.length.to_s + ' m' %></td>
            <td><%= berth.width.to_s + ' m' %></td>
            <td><%= berth.depth.to_s + ' m' %></td>
            <td><%= link_to berth.reknro.to_s, Boat.where(:reknro => berth.reknro).first %></td>
            <td><%= berth.jno.to_s %></td>
            <td><%= berth.vartio.to_s %></td>

			<% if berth.length > 7 %>
			  <td><%= berth.width*@hintaYli7.to_s.to_i %></td>
			<% else %>
			  <td><%=  berth.width*@hintaAlle7.to_s.to_i %></td>
			<% end %>

            <td><%= berth.printExists %></td>
            <td><%= link_to 'Muokkaa', edit_dock_berth_path(@dock.id, berth) %></td>
            <td><%= link_to 'Poista', berth, method: :delete, data: {confirm: 'Oletko varma?'} %></td>
          </tr>
      <% end %>
  <% end %>
</table>

<h3>Oikea puoli </h3>
<table>
  <tr>
    <th>Numero</th>
    <th>Pituus</th>
    <th>Leveys</th>
    <th>Syvyys</th>
    <th>Reknro</th>
    <th>Jäsennumero</th>
    <th>Vartiovuoro</th>
    <th>Hinta</th>
    <th>On olemassa</th>
    <th></th>
    <th></th>
  </tr>

  <% @berths.each do |berth| %>
      <% if berth.number % 2 == 0 %>
          <tr>
            <td><%= berth.number.to_s %></td>
            <td><%= berth.length.to_s + ' m' %></td>
            <td><%= berth.width.to_s + ' m' %></td>
            <td><%= berth.depth.to_s + ' m' %></td>
            <td><%= link_to berth.reknro.to_s, Boat.where(:reknro => berth.reknro).first %></td>
            <td><%= berth.jno.to_s %></td>
            <td><%= berth.vartio.to_s %></td>
            <% if berth.length > 7 %>

                <td><%= berth.width*@hintaYli7.to_s.to_i%></td>
            <% else %>
                <td><%= berth.width*@hintaAlle7.to_s.to_i %></td>
            <% end %>

            <td><%= berth.printExists %></td>
            <td><%= link_to 'Muokkaa', edit_dock_berth_path(@dock.id, berth) %></td>
            <td><%= link_to 'Poista', berth, method: :delete, data: {confirm: 'Oletko varma?'} %></td>
          </tr>
      <% end %>
  <% end %>
</table>
<br/>
<p> Laiturissa tilaa : <%= @spaceLeft.to_s + ' m' %> </p>

