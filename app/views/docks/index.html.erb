<h1>Laiturit</h1>



<% @docks.each do |dock| %>
    <h3>Laituri <%= "#{dock.name} - #{dock.length.to_s} m" %> <%= link_to 'N채yt채', dock %></h3>
    <div class="row">
      <div class="span5">
        <table class="table table-condensed">
          <% max_id = dock.berths.count || 0 %>
          <% if max_id > 0 %>
              <% ind = (1..max_id).reject(&:even?) %>
              <% ind.each do |i| %>
                  <% berth = dock.berths.find_by_number(i) %>
                  <tr>
                    <% if berth %>
                        <% if berth.boat %>
                            <td><%= check_box_tag(berth.boat.id, berth.boat.id, checked = false, :onclick => "swap()", :class => "boat") %><b> <%= i %></b>: <%= berth.boat.nimi %> </td>
                        <% else %>
                            <td><b><%= i %></b>: Ei venett채</td>
                        <% end %>
                    <% else %>
                        <td><b><%= i %></b>: Ei laituripaikkaa</td>
                    <% end %>
                  </tr>
              <% end %>
          <% end %>

        </table>
      </div>
      <div class="span5">
        <table class="table table-condensed">
          <% max_id = dock.berths.count || 0 %>
          <% if max_id > 0 %>
              <% ind = (1..max_id).reject(&:odd?) %>
              <% ind.each do |i| %>
                  <% berth = dock.berths.find_by_number(i) %>
                  <tr>
                    <% if berth %>
                        <% if berth.boat %>
                            <td><%= check_box_tag(berth.boat.id, berth.boat.id, checked = false) %> <b><%= i %></b>: <%= berth.boat.nimi %> </td>
                        <% else %>
                            <td><b><%= i %></b>: Ei venett채</td>
                        <% end %>
                    <% else %>
                        <td><b><%= i %></b>: Ei laituripaikkaa</td>
                    <% end %>
                  </tr>
              <% end %>
          <% end %>
        </table>
      </div>
    </div>
<% end %>
</table>
