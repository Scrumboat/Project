<h1>Laiturit</h1>

<table>
  <tr>
    <th>Laituri numero</th>
    <th>Pituus</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @docks.each do |dock| %>
  <tr>
    <td><%= dock.id.to_s %></td>
    <td><%= dock.length.to_s + ' m' %></td>
    <td><%= link_to 'Näytä', dock %></td>
    <td><%= link_to 'Muokkaa', edit_dock_path(dock) %></td>
    <td><%= link_to 'Poista', dock, method: :delete, data: { confirm: 'Oletko varma?' } %></td>
  </tr>
<% end %>
</table>

